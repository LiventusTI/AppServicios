
@{
    ViewBag.Title = "VisualizarFreightForwarder";
    Layout = "~/Views/MasterPage.cshtml";
    int PerfilInterior = Convert.ToInt32(Session["PerfilInterior"]);

}
<div class="col-sm-12">
    <div class="x_panel">
        <div class="x_title">
            <div class="row">
                <div class="col-sm-7">
                    <h2 class="tr" key="mantenedorfreightForwarder">Gestionar / Visualizar Freight Forwarder</h2>
                </div>
                <div class="col-sm-3">
                    <button type="button" class="btn btn-success editar tr" id="CrearFreightForwarder" key="botonagregarfreightforwarder">Agregar Freightforwarder</button>
                </div>
            </div>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            <div class="row">
                <div class="col-sm-12 col-md-12 col-lg-12">
                    <table id="Tb_FreightForwarder" class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th class="tr" key="tablaidfreightforwarder">ID FREIGHTFORWARDER</th>
                                <th class="tr" key="tablanombre">NOMBRE</th>
                                <th class="tr" key="tablaestado">ESTADO</th>
                                <th class="tr" key="tablaopciones">OPCIONES</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <!--Modal para agregar datos-->
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" style="margin-left:80px; margin-right:10px;">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content" style="width:100%">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel2"></h4>
                </div>
                <div class="modal-body">
                    <form class="form-horizontal">
                        <div class="form-group">
                            <label for="Freightforwarder" class="alerta col-sm-2 control-label">Freightforwarder (*)</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="Freightforwarder" onkeyup="this.value = this.value.toUpperCase();">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="Estado" class="alerta col-sm-2 control-label" key="estado">Estado</label>
                            <div class="col-sm-10">
                                <select class="form-control" id="Estado">
                                    <option value="0">Activo</option>
                                    <option value="1">Deshabilitado</option>
                                </select>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-success tr" id="IngresarInformacion" key="botonagregarfreightforwarder">Agregar Freightforwarder</button>
                </div>
            </div>
        </div>
    </div>
    <!--Modal para agregar datos-->
    <!--Modal para editar datos-->
    <div class="modal fade" id="myModal2" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" style="margin-left:80px; margin-right:10px;">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content" style="width:100%">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel2"></h4>
                </div>
                <div class="modal-body">
                    <form class="form-horizontal">
                        <div class="form-group">
                            <label for="FreightforwarderEditar" class="alerta col-sm-2 control-label">Freightforwarder (*)</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="FreightforwarderEditar" onkeyup="this.value = this.value.toUpperCase();">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="EstadoEditar" class="alerta col-sm-2 control-label" key="estado">Estado</label>
                            <div class="col-sm-10">
                                <select class="form-control" id="EstadoEditar">
                                    <option value="0">Activo</option>
                                    <option value="1">Deshabilitado</option>
                                </select>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-success editar tr" id="EditarInformacion" key="botoneditarfreightforwarder">Editar Freightforwarder</button>
                </div>
            </div>
        </div>
    </div>
    <!--Modal para editar datos-->
    <input type="text" class="input form_control" id="idfreightforwarder" disabled="disabled" style="text-align:center; text-align-last:center;" hidden />
    <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal" id="CrearfreightforwarderModal" style="display:none;"></button>
    <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal2" id="EditarfreightforwarderModal" style="display:none;"></button>
</div>
<script>

    var lenguaje = document.cookie;

    if (@PerfilInterior != 1027) {
        $("#CrearFreightForwarder").hide();
    }

    $(document).ready(function () {
        $.ajax({
            type: "POST",
            url: '@Url.Action("GetFreightForwarder", "FreightForwarder")',
            success: function (response) {
                var data = [];
                var json = JSON.parse(response);
                var cuenta = json.length;
                $('#Tb_FreightForwarder').show(500);
                for (var i = 0 ; i < cuenta ; i++) {
                    if (json[i].Estado == 0) {
                        var estado = 'Activo';
                    } else {
                        var estado = 'No Activo';
                    }
                    data.push([json[i].Id_FreightForwarder, json[i].NombreFreightForwarder.toUpperCase(), estado]);
                }

                if (lenguaje == "es") {
                    var table = $('#Tb_FreightForwarder').DataTable({
                        data: data,
                        dom: 'Bfrtip',
                        buttons: [
                            'copy', 'csv', 'excel'
                        ],
                        "language": {
                            "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Spanish.json"
                        },
                        fixedColumns: true,
                        "columnDefs": [{
                            "targets": -1,
                            "data": null,
                            "defaultContent": "<i class='fa fa-edit fa-2x' title='Editar Exportador'></i>"
                        }],
                        "rowCallback": function (row, data, index) {
                            if (data[0] == 0) {
                                $('td:eq(3)', row).html(' ');
                            }
                        }
                    });
                } else {
                    var table = $('#Tb_FreightForwarder').DataTable({
                        data: data,
                        dom: 'Bfrtip',
                        buttons: [
                            'copy', 'csv', 'excel'
                        ],
                        fixedColumns: true,
                        "columnDefs": [{
                            "targets": -1,
                            "data": null,
                            "defaultContent": "<i class='fa fa-edit fa-2x' title='Edit Exporter'></i>"
                        }],
                        "rowCallback": function (row, data, index) {
                            if (data[0] == 0) {
                                $('td:eq(3)', row).html(' ');
                            }
                        }
                    });
                }


                $('#Tb_FreightForwarder tbody').on('click', 'i', function () {
                    var data = table.row($(this).parents('tr')).data();
                    $('#FreightforwarderEditar').focus();
                    $('#FreightforwarderEditar').val(data[1]);
                    $("#FreightforwarderEditar").css("background-color", "rgba(255, 0, 0, 0)");
                    $("#idfreightforwarder").val(data[0]);
                    $('#EditarfreightforwarderModal').trigger('click');
                });
            },
        });
    });

    //boton crear commodity//
    $("#CrearFreightForwarder").click(function () {
        $('#CrearfreightforwarderModal').trigger('click');
        $("#Freightforwarder").val("");
        $("#Freightforwarder").css("background-color", "rgba(255, 0, 0, 0)");
        $('#Freightforwarder').focus();
    });
    //boton crear commodity//

    //Ingresar Información//
    $("#IngresarInformacion").click(function () {
        if ($("#Freightforwarder").val() != "") {
            $("#Freightforwarder").css("background-color", "rgba(255, 0, 0, 0)");
            $.ajax({
                type: "POST",
                url: '@Url.Action("CrearFreightForwarder", "FreightForwarder")',
                data: { NombreFreightForwarder: $("#Freightforwarder").val(), Estado: $("#Estado").val() },
                success: function (response) {
                    var json = JSON.parse(response);
                    if (json.validador == 0) {
                        var aux = 'success';
                    } else {
                        var aux = 'warning';
                    }
                    swal({
                        title: '',
                        text: json.Mensaje,
                        type: aux,
                        showCancelButton: false,
                        confirmButtonColor: '#3085d6',
                        cancelButtonColor: '#d33',
                        confirmButtonText: 'Aceptar'
                    }).then((result) => {
                        location.reload();
                    })
                }
            });
        } else {
            $("#Freightforwarder").css("background-color", "rgba(255, 0, 0, 0.4)");
        }
    });
    //Ingresar Información//

    //Editar Información//
    $("#EditarInformacion").click(function () {
        if ($("#FreightforwarderEditar").val() != "") {
            $("#FreightforwarderEditar").css("background-color", "rgba(255, 0, 0, 0)");
                $.ajax({
                    type: "POST",
                    url: '@Url.Action("EditarFreightForwarder", "FreightForwarder")',
                    data: { NombreFreightForwarder: $("#FreightforwarderEditar").val(), Estado: $("#EstadoEditar").val(), IdFreightForwarder: $("#idfreightforwarder").val() },
                    success: function (response) {
                        var json = JSON.parse(response);
                        if (json.validador == 0) {
                            var aux = 'success';
                        } else {
                            var aux = 'warning';
                        }
                        swal({
                            title: '',
                            text: json.Mensaje,
                            type: aux,
                            showCancelButton: false,
                            confirmButtonColor: '#3085d6',
                            cancelButtonColor: '#d33',
                            confirmButtonText: 'Aceptar'
                        }).then((result) => {
                            location.reload();
                        })
                    }
                });
        } else {
            $("#FreightforwarderEditar").css("background-color", "rgba(255, 0, 0, 0.4)");
        }
    });
    //Editar Información//

</script>

