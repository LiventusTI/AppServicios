
@{
    ViewBag.Title = "VisualizarExportador";
    Layout = "~/Views/MasterPage.cshtml";
    int PerfilInterior = Convert.ToInt32(Session["PerfilInterior"]);
}
<div class="col-sm-12">
    <div class="x_panel">
        <div class="x_title">
            <div class="row">
                <div class="col-sm-7">
                    <h2 class="tr" key="mantenedorexportador">Gestionar / Visualizar Exportadores</h2>
                </div>
                <div class="col-sm-3">
                    <button type="button" class="btn btn-success editar tr" id="CrearExportador" key="botonagregarexportador">Agregar Exportador</button>
                </div>
            </div>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            <div class="row">
                <div class="col-sm-12 col-md-12 col-lg-12">
                    <table id="Tb_Exportador" class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th class="tr" key="tablaidexportador">ID EXPORTADOR</th>
                                <th class="tr" key="tablanombre">NOMBRE</th>
                                <th class="tr" key="tablapais">PAIS</th>
                                <th class="tr" key="tablaestado">ESTADO</th>
                                <th class="tr" key="tablaopciones">OPCIONES</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <!--Modal para agregar datos-->
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" style="margin-left:80px; margin-right:10px;">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content" style="width:100%">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel2"></h4>
                </div>
                <div class="modal-body">
                    <form class="form-horizontal">
                        <div class="form-group">
                            <label for="Exportador" class="alerta col-sm-2 control-label" key="nombreexportador">Exportador (*)</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="Exportador" onkeyup="this.value = this.value.toUpperCase();">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="Pais" class="alerta col-sm-2 control-label" key="nombrepais">País</label>
                            <div class="col-sm-10">
                                <select class="form-control" id="Pais"><option value="0" selected>Seleccione País</option></select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="Estado" class="alerta col-sm-2 control-label" key="estado">Estado</label>
                            <div class="col-sm-10">
                                <select class="form-control" id="Estado">
                                    <option value="0">Activo</option>
                                    <option value="1">Deshabilitado</option>
                                </select>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-success tr" id="IngresarInformacion" key="botonagregarexportador">Agregar Exportador</button>
                </div>
            </div>
        </div>
    </div>
    <!--Modal para agregar datos-->
    <!--Modal para editar datos-->
    <div class="modal fade" id="myModal2" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" style="margin-left:80px; margin-right:10px;">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content" style="width:100%">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel2"></h4>
                </div>
                <div class="modal-body">
                    <form class="form-horizontal">
                        <div class="form-group">
                            <label for="ExportadorEditar" class="alerta col-sm-2 control-label" key="nombreexportador">Exportador (*)</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="ExportadorEditar" onkeyup="this.value = this.value.toUpperCase();">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="PaisEditar" class="alerta col-sm-2 control-label" key="nombrepais">País</label>
                            <div class="col-sm-10">
                                <select class="form-control" id="PaisEditar"><option value="0" selected>Seleccione País</option></select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="EstadoEditar" class="alerta col-sm-2 control-label" key="estado">Estado</label>
                            <div class="col-sm-10">
                                <select class="form-control" id="EstadoEditar">
                                    <option value="0">Activo</option>
                                    <option value="1">Deshabilitado</option>
                                </select>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-success tr" id="EditarInformacion" key="botoneditarexportador">Editar Exportador</button>
                </div>
            </div>
        </div>
    </div>
    <!--Modal para editar datos-->
    <input type="text" class="input form_control" id="idexportador" disabled="disabled" style="text-align:center; text-align-last:center;" hidden />
    <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal" id="CrearExportadorModal" style="display:none;"></button>
    <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal2" id="EditarExportadorModal" style="display:none;"></button>
</div>

<script>

    var lenguaje = document.cookie;

    if (@PerfilInterior != 1027) {
        $("#CrearExportador").hide();
    }
    $(document).ready(function () {
        $.ajax({
            type: "POST",
            url: '@Url.Action("GetExportador", "Exportador")',
            success: function (response) {
                var data = [];
                var json = JSON.parse(response);
                var cuenta = json.length;
                $('#Tb_Exportador').show(500);
                for (var i = 0 ; i < cuenta ; i++) {
                    if (json[i].Estado == 0) {
                        var estado = 'Activo';
                    } else {
                        var estado = 'No Activo';
                    }
                    data.push([json[i].Id_Exportador, json[i].NombreExportador.toUpperCase(), json[i].NombrePais.toUpperCase(), estado]);
                }

                if (lenguaje == "es") {
                    var table = $('#Tb_Exportador').DataTable({
                        data: data,
                        dom: 'Bfrtip',
                        buttons: [
                            'copy', 'csv', 'excel'
                        ],
                        "language": {
                            "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Spanish.json"
                        },
                        fixedColumns: true,
                        "columnDefs": [{
                            "targets": -1,
                            "data": null,
                            "defaultContent": "<i class='fa fa-edit fa-2x' title='Editar Exportador'></i>"
                        }],
                        "rowCallback": function (row, data, index) {
                            if (data[0] == 0) {
                                $('td:eq(4)', row).html(' ');
                            }
                        }
                    });
                } else {
                    var table = $('#Tb_Exportador').DataTable({
                        data: data,
                        dom: 'Bfrtip',
                        buttons: [
                            'copy', 'csv', 'excel'
                        ],
                        fixedColumns: true,
                        "columnDefs": [{
                            "targets": -1,
                            "data": null,
                            "defaultContent": "<i class='fa fa-edit fa-2x' title='Editar Exportador'></i>"
                        }],
                        "rowCallback": function (row, data, index) {
                            if (data[0] == 0) {
                                $('td:eq(4)', row).html(' ');
                            }
                        }
                    });
                }


                $('#Tb_Exportador tbody').on('click', 'i', function () {
                    var data = table.row($(this).parents('tr')).data();
                    $('#ExportadorEditar').focus();
                    $('#ExportadorEditar').val(data[1]);
                    $("#PaisEditar").css("background-color", "rgba(255, 0, 0, 0)");
                    $("#ExportadorEditar").css("background-color", "rgba(255, 0, 0, 0)");
                    $("#idexportador").val(data[0]);
                    $.ajax({
                        type: "POST",
                        url: '@Url.Action("GetPaisesActivos", "Paises")',
                        success: function (response) {
                            var data = [];
                            var json = JSON.parse(response);
                            var cuenta = json.length;
                            var optionsAsString = "";
                            $('#PaisEditar').empty();
                            for (var i = 0; i < cuenta; i++) {
                                optionsAsString += "<option value='" + json[i].Id + "'>" + json[i].Nombre + "</option>";
                            }
                            $('#PaisEditar').append(optionsAsString);
                        },
                    });
                    $('#EditarExportadorModal').trigger('click');
                });
            },
        });
    });

    //Botón Crear exportador//
    $("#CrearExportador").click(function () {
        $('#CrearExportadorModal').trigger('click');
        $("#Exportador").val("");
        $("#Pais").val(0);
        $("#Pais").css("background-color", "rgba(255, 0, 0, 0)");
        $("#Exportador").css("background-color", "rgba(255, 0, 0, 0)");
        $('#Exportador').focus();
        $.ajax({
            type: "POST",
            url: '@Url.Action("GetPaisesActivos", "Paises")',
            success: function (response) {
                var data = [];
                var json = JSON.parse(response);
                var cuenta = json.length;
                var optionsAsString = "";
                $('#Pais').empty();
                for (var i = 0; i < cuenta; i++) {
                    optionsAsString += "<option value='" + json[i].Id + "'>" + json[i].Nombre + "</option>";
                }
                $('#Pais').append(optionsAsString);
            },
        });
    });
    //Botón Crear exportador//

    //Ingresar Información//
    $("#IngresarInformacion").click(function () {
        if ($("#Exportador").val() != "") {
            $("#Exportador").css("background-color", "rgba(255, 0, 0, 0)");
            if ($("#Pais").val() != 0) {
                $("#Pais").css("background-color", "rgba(255, 0, 0, 0)");
                $.ajax({
                    type: "POST",
                    url: '@Url.Action("CrearExportador", "Exportador")',
                    data: { NombreExportador: $("#Exportador").val(), Estado: $("#Estado").val(), IdPais: $("#Pais").val() },
                    success: function (response) {
                        var json = JSON.parse(response);
                        if (json.validador == 0) {
                            var aux = 'success';
                        } else {
                            var aux = 'warning';
                        }
                        swal({
                            title: '',
                            text: json.Mensaje,
                            type: aux,
                            showCancelButton: false,
                            confirmButtonColor: '#3085d6',
                            cancelButtonColor: '#d33',
                            confirmButtonText: 'Aceptar'
                        }).then((result) => {
                            location.reload();
                        })
                    }
                });
            } else {
                $("#Pais").css("background-color", "rgba(255, 0, 0, 0.4)");
            }
        } else {
            $("#Exportador").css("background-color", "rgba(255, 0, 0, 0.4)");
        }
    });
    //Ingresar Información//

    //Editar Información//
    $("#EditarInformacion").click(function () {
        if ($("#ExportadorEditar").val() != "") {
            $("#ExportadorEditar").css("background-color", "rgba(255, 0, 0, 0)");
            if ($("#PaisEditar").val() != 0) {
                $("#PaisEditar").css("background-color", "rgba(255, 0, 0, 0)");
                $.ajax({
                    type: "POST",
                    url: '@Url.Action("EditarExportador", "Exportador")',
                    data: { NombreExportador: $("#ExportadorEditar").val(), Estado: $("#EstadoEditar").val(), IdExportador: $("#idexportador").val(), IdPais: $("#PaisEditar").val() },
                    success: function (response) {
                        var json = JSON.parse(response);
                        if (json.validador == 0) {
                            var aux = 'success';
                        } else {
                            var aux = 'warning';
                        }
                        swal({
                            title: '',
                            text: json.Mensaje,
                            type: aux,
                            showCancelButton: false,
                            confirmButtonColor: '#3085d6',
                            cancelButtonColor: '#d33',
                            confirmButtonText: 'Aceptar'
                        }).then((result) => {
                            location.reload();
                        })
                    }
                });
            } else {
                $("#PaisEditar").css("background-color", "rgba(255, 0, 0, 0.4)");
            }
        } else {
            $("#CiudadEditar").css("background-color", "rgba(255, 0, 0, 0.4)");
        }
    });
    //Editar Información//
</script>
