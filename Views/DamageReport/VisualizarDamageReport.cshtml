<h2>Consultar / Modificar Damage Report</h2>

<div class="row">
    <div class="col-sm-12 col-md-12 col-lg-12">
        <table id="Tb_DamageReport" class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>ID Damage Report</th>
                    <th>Controlador Asociado(ESN)</th>
                    <th>Fecha</th>
                    <th>Estado</th>
                    <th>Opciones</th>
                </tr>
            </thead>
            <tfoot>
                <tr>
                    <th>ID Damage Report</th>
                    <th>Controlador Asociado(ESN)</th>
                    <th>Fecha</th>
                    <th>Estado</th>
                </tr>
            </tfoot>
        </table>
    </div>
</div>

<script>
    $(document).ready(function () {
        // Setup - add a text input to each footer cell

        $('#Tb_DamageReport tfoot th').each(function () {
            var title = $(this).text();
                $(this).html('<input class="form-control" type="text" placeholder="Buscar" />');

        });

        var table = $('#Tb_DamageReport').DataTable({

        });

        table.columns().every(function () {
            var that = this;

            $('input', this.footer()).on('keyup change', function () {
                if (that.search() !== this.value) {
                    that
                        .search(this.value)
                        .draw();
                }
            });
        });
    });

</script>