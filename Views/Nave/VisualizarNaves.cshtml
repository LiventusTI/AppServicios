@{
    ViewBag.Title = "VisualizarNaves";
    Layout = "~/Views/MasterPage.cshtml";
}

<div class="col-sm-12">
    <div class="x_panel">
        <div class="x_title">
            <div class="row">
                <div class="col-sm-7">
                    <h2 class="tr" key="mantenedornaves">Gestionar / Visualizar Naves</h2>
                </div>
                <div class="col-sm-3">
                    <button type="button" class="btn btn-success tr" id="CrearNave" key="botonagregarnave">Agregar Nave</button>
                </div>
            </div>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            <div class="row">
                <div class="col-sm-12 col-md-12 col-lg-12">
                    <table id="Tb_Nave" class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th class="tr" key="tablaidciudad">ID VESSEL</th>
                                <th class="tr" key="tablanombre">NOMBRE</th>
                                <th class="tr" key="tablaestado">ESTADO</th>
                                <th class="tr" key="tablaopciones">OPCIONES</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!--Modal para agregar datos-->
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" style="margin-left:80px; margin-right:10px;">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content" style="width:100%">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel2"></h4>
                </div>
                <div class="modal-body">
                    <form class="form-horizontal">
                        <div class="form-group">
                            <label for="Nave" class="alerta col-sm-2 control-label" key="nombrenave">Nave (*)</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="Nave" onkeyup="this.value = this.value.toUpperCase();">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="Naviera" class="alerta col-sm-2 control-label" key="nombrenaviera">Naviera (*)</label>
                            <div class="col-sm-10">
                                <select class="form-control" id="Naviera"><option value="0" selected>Seleccione Naviera</option></select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="Estado" class="alerta col-sm-2 control-label" key="estado">Estado</label>
                            <div class="col-sm-10">
                                <select class="form-control" id="Estado">
                                    <option value="0">Activo</option>
                                    <option value="1">Deshabilitado</option>
                                </select>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-success tr" id="IngresarInformacion" key="botonagregarnave">Agregar Nave</button>
                </div>
            </div>
        </div>
    </div>
    <!--Modal para agregar datos-->
    <!--Modal para editar datos-->
    <div class="modal fade" id="myModal2" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" style="margin-left:80px; margin-right:10px;">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content" style="width:100%">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel2"></h4>
                </div>
                <div class="modal-body">
                    <form class="form-horizontal">
                        <div class="form-group">
                            <label for="NaveEditar" class="alerta col-sm-2 control-label" key="nombrenave">Nave (*)</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="NaveEditar" onkeyup="this.value = this.value.toUpperCase();">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="NavieraEditar" class="alerta col-sm-2 control-label" key="nombrenaviera">Naviera</label>
                            <div class="col-sm-10">
                                <select class="form-control" id="NavieraEditar"><option value="0" selected>Seleccione Naviera</option></select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="EstadoEditar" class="alerta col-sm-2 control-label" key="estado">Estado</label>
                            <div class="col-sm-10">
                                <select class="form-control" id="EstadoEditar">
                                    <option value="0">Activo</option>
                                    <option value="1">Deshabilitado</option>
                                </select>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-success tr" id="EditarInformacion" key="botoneditarnave">Editar Nave</button>
                </div>
            </div>
        </div>
    </div>
    <!--Modal para editar datos-->
    <input type="text" class="input form_control" id="idnave" disabled="disabled" style="text-align:center; text-align-last:center;" hidden />
    <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal" id="CrearNaveModal" style="display:none;"></button>
    <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal2" id="EditarNaveModal" style="display:none;"></button>
</div>

<script>

    var lenguaje = document.cookie;

    $(document).ready(function () {
        $.ajax({
            type: "POST",
            url: '@Url.Action("GetNaves", "Nave")',
            success: function (response) {
                var data = [];
                var json = JSON.parse(response);
                var cuenta = json.length;
                $('#Tb_Nave').show(500);
                for (var i = 0 ; i < cuenta ; i++) {
                    if (json[i].Estado == 0) {
                        var estado = 'Activo';
                    } else {
                        var estado = 'No Activo';
                    }
                    data.push([json[i].IdNave, json[i].NombreNave.toUpperCase(), estado]);
                }

                if (lenguaje == "es") {
                    var table = $('#Tb_Nave').DataTable({
                        data: data,
                        dom: 'Bfrtip',
                        buttons: [
                            'copy', 'csv', 'excel'
                        ],
                        "language": {
                            "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Spanish.json"
                        },
                        fixedColumns: true,
                        "columnDefs": [{
                            "targets": -1,
                            "data": null,
                            "defaultContent": "<i class='fa fa-edit fa-2x' title='Editar Nave'></i>"
                        }],
                        "rowCallback": function (row, data, index) {
                            if (data[0] == 0) {
                                $('td:eq(4)', row).html(' ');
                            }
                        }
                    });
                } else {
                    var table = $('#Tb_Nave').DataTable({
                        data: data,
                        dom: 'Bfrtip',
                        buttons: [
                            'copy', 'csv', 'excel'
                        ],
                        fixedColumns: true,
                        "columnDefs": [{
                            "targets": -1,
                            "data": null,
                            "defaultContent": "<i class='fa fa-edit fa-2x' title='Editar Nave'></i>"
                        }],
                        "rowCallback": function (row, data, index) {
                            if (data[0] == 0) {
                                $('td:eq(4)', row).html(' ');
                            }
                        }
                    });
                }


                $('#Tb_Nave tbody').on('click', 'i', function () {
                    var data = table.row($(this).parents('tr')).data();
                    $('#NaveEditar').focus();
                    $('#NaveEditar').val(data[1]);
                    $("#NavieraEditar").css("background-color", "rgba(255, 0, 0, 0)");
                    $("#NaveEditar").css("background-color", "rgba(255, 0, 0, 0)");
                    $("#idciudad").val(data[0]);
                    $.ajax({
                        type: "POST",
                        url: '@Url.Action("GetNavierasActivas", "Naviera")',
                        success: function (response) {
                            var data = [];
                            var json = JSON.parse(response);
                            var cuenta = json.length;
                            var optionsAsString = "";
                            $('#NavieraEditar').empty();
                            for (var i = 0; i < cuenta; i++) {
                                optionsAsString += "<option value='" + json[i].Id + "'>" + json[i].Nombre + "</option>";
                            }
                            $('#NavieraEditar').append(optionsAsString);
                        },
                    });
                    $('#EditarNaveModal').trigger('click');
                });
            },
        });
    });

    //Botón Crear nave//
    $("#CrearNave").click(function () {
        $('#CrearNaveModal').trigger('click');
        $("#Nave").val("");
        $("#Naviera").val(0);
        $("#Nave").css("background-color", "rgba(255, 0, 0, 0)");
        $("#Naviera").css("background-color", "rgba(255, 0, 0, 0)");
        $('#Nave').focus();
        $.ajax({
            type: "POST",
            url: '@Url.Action("GetNavierasActivas", "Naviera")',
            success: function (response) {
                var data = [];
                var json = JSON.parse(response);
                var cuenta = json.length;
                var optionsAsString = "";
                $('#Naviera').empty();
                for (var i = 0; i < cuenta; i++) {
                    optionsAsString += "<option value='" + json[i].Id + "'>" + json[i].Nombre + "</option>";
                }
                $('#Naviera').append(optionsAsString);
            },
        });
    });
    //Botón Crear nave//

    //Ingresar Información//
    $("#IngresarInformacion").click(function () {
        if ($("#Nave").val() != "") {
            $("#Nave").css("background-color", "rgba(255, 0, 0, 0)");
                $.ajax({
                    type: "POST",
                    url: '@Url.Action("CrearNave", "Nave")',
                    data: { NombreNave: $("#Nave").val(), Estado: $("#Estado").val(), IdNaviera: $("#Naviera").val() },
                    success: function (response) {
                        var json = JSON.parse(response);
                        if (json.validador == 0) {
                            var aux = 'success';
                        } else {
                            var aux = 'warning';
                        }
                        swal({
                            title: '',
                            text: json.Mensaje,
                            type: aux,
                            showCancelButton: false,
                            confirmButtonColor: '#3085d6',
                            cancelButtonColor: '#d33',
                            confirmButtonText: 'Aceptar'
                        }).then((result) => {
                            location.reload();
                        })
                    }
                });
        } else {
            $("#Nave").css("background-color", "rgba(255, 0, 0, 0.4)");
        }
    });
    //Ingresar Información//

    //Editar Información//
    $("#EditarInformacion").click(function () {
        if ($("#NaveEditar").val() != "") {
            $("#NaveEditar").css("background-color", "rgba(255, 0, 0, 0)");
                    $.ajax({
                        type: "POST",
                        url: '@Url.Action("EditarNave", "Nave")',
                        data: { NombreNave: $("#NaveEditar").val(), Estado: $("#EstadoEditar").val(), IdNave: $("#idnave").val(), IdNaviera: $("#Naviera").val() },
                        success: function (response) {
                            var json = JSON.parse(response);
                            if (json.validador == 0) {
                                var aux = 'success';
                            } else {
                                var aux = 'warning';
                            }
                            swal({
                                title: '',
                                text: json.Mensaje,
                                type: aux,
                                showCancelButton: false,
                                confirmButtonColor: '#3085d6',
                                cancelButtonColor: '#d33',
                                confirmButtonText: 'Aceptar'
                            }).then((result) => {
                                location.reload();
                            })
                        }
                    });
        } else {
            $("#NaveEditar").css("background-color", "rgba(255, 0, 0, 0.4)");
        }
    });
    //Editar Información//
</script>