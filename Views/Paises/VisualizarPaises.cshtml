
@{
    ViewBag.Title = "VisualizarPaises";
    Layout = "~/Views/MasterPage.cshtml";
}
<div class="col-sm-12">
    <div class="x_panel">
        <div class="x_title">
            <div class="row">
                <div class="col-sm-7">
                    <h2 class="tr" key="mantenedorpaises">Gestionar / Visualizar Paises</h2>
                </div>
                <div class="col-sm-3">
                    <button type="button" class="btn btn-success editar tr" id="CrearPais" key="botonagregarpais">Agregar País</button>
                </div>
            </div>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            <div class="row">
                <div class="col-sm-12 col-md-12 col-lg-12">
                    <table id="Tb_Paises" class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th class="tr" key="tablaidpais">ID PAIS</th>
                                <th class="tr" key="tablanombre">NOMBRE</th>
                                <th class="tr" key="tablacontinente">CONTINENTE</th>
                                <th class="tr" key="tablaestado">ESTADO</th>
                                <th class="tr" key="tablaopciones">OPCIONES</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!--Modal para agregar datos-->
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" style="margin-left:80px; margin-right:10px;">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content" style="width:100%">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel2"></h4>
                </div>
                <div class="modal-body">
                    <form class="form-horizontal">
                        <div class="form-group">
                            <label for="Pais" class="alerta col-sm-2 control-label" key="nombrepais">Pais (*)</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="Pais" onkeyup="this.value = this.value.toUpperCase();">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="Continente" class="alerta col-sm-2 control-label" key="nombrecontinente">Continente (*)</label>
                            <div class="col-sm-10">
                                <select class="form-control" id="Continente"><option value="0" selected>Seleccione continente</option></select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="Estado" class="alerta col-sm-2 control-label" key="estado">Estado</label>
                            <div class="col-sm-10">
                                <select class="form-control" id="Estado">
                                    <option value="0">Activo</option>
                                    <option value="1">Deshabilitado</option>
                                </select>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-success tr" id="IngresarInformacion" key="botonagregarpais">Agregar País</button>
                </div>
            </div>
        </div>
    </div>
    <!--Modal para agregar datos-->
    <!--Modal para editar datos-->
    <div class="modal fade" id="myModal2" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" style="margin-left:80px; margin-right:10px;">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content" style="width:100%">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel2"></h4>
                </div>
                <div class="modal-body">
                    <form class="form-horizontal">
                        <div class="form-group">
                            <label for="PaisEditar" class="alerta col-sm-2 control-label" key="nombrepais">Pais (*)</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="PaisEditar" onkeyup="this.value = this.value.toUpperCase();">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="ContinenteEditar" class="alerta col-sm-2 control-label" key="nombrecontinente">Continente (*)</label>
                            <div class="col-sm-10">
                                <select class="form-control" id="ContinenteEditar"><option value="0" selected>Seleccione continente</option></select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="EstadoEditar" class="alerta col-sm-2 control-label" key="estado">Estado</label>
                            <div class="col-sm-10">
                                <select class="form-control" id="EstadoEditar">
                                    <option value="0">Activo</option>
                                    <option value="1">Deshabilitado</option>
                                </select>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-success tr" id="EditarInformacion" key="botoneditarpais">Editar País</button>
                </div>
            </div>
        </div>
    </div>
    <!--Modal para editar datos-->
    <input type="text" class="input form_control" id="idpais" disabled="disabled" style="text-align:center; text-align-last:center;" hidden />
    <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal" id="CrearPaisModal" style="display:none;"></button>
    <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal2" id="EditarPaisModal" style="display:none;"></button>
</div>
<script>

    var lenguaje = document.cookie;

    $(document).ready(function () {
        $.ajax({
            type: "POST",
            url: '@Url.Action("GetPaises", "Paises")',
            success: function (response) {
                var data = [];
                var json = JSON.parse(response);
                var cuenta = json.length;
                $('#Tb_Paises').show(500);
                for (var i = 0 ; i < cuenta ; i++) {
                    if (json[i].Activo == 0) {
                        var estado = 'Activo';
                    } else {
                        var estado = 'No Activo';
                    }
                    data.push([json[i].Id, json[i].Nombre.toUpperCase(), json[i].NombreContinente.toUpperCase(), estado]);
                }

                if (lenguaje == "es") {
                    var table = $('#Tb_Paises').DataTable({
                        data: data,
                        "language": {
                            "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Spanish.json"
                        },
                        fixedColumns: true,
                        "columnDefs": [{
                            "targets": -1,
                            "data": null,
                            "defaultContent": "<i class='fa fa-edit fa-2x' title='Editar Naviera'></i>"
                        }],
                        "rowCallback": function (row, data, index) {
                            if (data[0] == 0) {
                                $('td:eq(4)', row).html(' ');
                            }
                        }
                    });
                } else {
                    var table = $('#Tb_Paises').DataTable({
                        data: data,
                        fixedColumns: true,
                        "columnDefs": [{
                            "targets": -1,
                            "data": null,
                            "defaultContent": "<i class='fa fa-edit fa-2x' title='Editar Naviera'></i>"
                        }],
                        "rowCallback": function (row, data, index) {
                            if (data[0] == 0) {
                                $('td:eq(4)', row).html(' ');
                            }
                        }
                    });
                }


                $('#Tb_Paises tbody').on('click', 'i', function () {
                    var data = table.row($(this).parents('tr')).data();
                    $('#PaisEditar').focus();
                    $('#PaisEditar').val(data[1]);
                    $("#PaisEditar").css("background-color", "rgba(255, 0, 0, 0)");
                    $("#ContinenteEditar").css("background-color", "rgba(255, 0, 0, 0)");
                    $("#idpais").val(data[0]);
                    $.ajax({
                        type: "POST",
                        url: '@Url.Action("GetContinentesActivos", "Paises")',
                        success: function (response) {
                            var data = [];
                            var json = JSON.parse(response);
                            var cuenta = json.length;
                            var optionsAsString = "";
                            $('#ContinenteEditar').empty();
                            for (var i = 0; i < cuenta; i++) {
                                optionsAsString += "<option value='" + json[i].Id + "'>" + json[i].Nombre + "</option>";
                            }
                            $('#ContinenteEditar').append(optionsAsString);
                        },
                    });
                    $('#EditarPaisModal').trigger('click');
                });
            },
        });
    });

    //Botón Crear Ciudad//
    $("#CrearPais").click(function () {
        $('#CrearPaisModal').trigger('click');
        $("#Pais").val("");
        $("#Pais").css("background-color", "rgba(255, 0, 0, 0)");
        $('#Pais').focus();
        $("#Continente").val(0);
        $("#Continente").css("background-color", "rgba(255, 0, 0, 0)");

        $.ajax({
            type: "POST",
            url: '@Url.Action("GetContinentesActivos", "Paises")',
            success: function (response) {
                var data = [];
                var json = JSON.parse(response);
                var cuenta = json.length;
                var optionsAsString = "";
                $('#Continente').empty();
                for (var i = 0; i < cuenta; i++) {
                    optionsAsString += "<option value='" + json[i].Id + "'>" + json[i].Nombre + "</option>";
                }
                $('#Continente').append(optionsAsString);
            },
        });
    });
    //Botón Crear Ciudad//

    //Ingresar Información//
    $("#IngresarInformacion").click(function () {
        if ($("#Pais").val() != "") {
            $("#Pais").css("background-color", "rgba(255, 0, 0, 0)");
            if ($("#Continente").val() != 0) {
                $("#Continente").css("background-color", "rgba(255, 0, 0, 0)");
                $.ajax({
                    type: "POST",
                    url: '@Url.Action("CrearPais", "Paises")',
                    data: { NombrePais: $("#Pais").val(), IdContinente: $("#Continente").val(), Estado: $("#Estado").val() },
                    success: function (response) {
                        var json = JSON.parse(response);
                        if (json.validador == 0) {
                            var aux = 'success';
                        } else {
                            var aux = 'warning';
                        }
                        swal({
                            title: '',
                            text: json.Mensaje,
                            type: aux,
                            showCancelButton: false,
                            confirmButtonColor: '#3085d6',
                            cancelButtonColor: '#d33',
                            confirmButtonText: 'Aceptar'
                        }).then((result) => {
                            location.reload();
                        })
                    }
                });
            } else {
                $("#Continente").css("background-color", "rgba(255, 0, 0, 0.4)");
            }
        } else {
            $("#Pais").css("background-color", "rgba(255, 0, 0, 0.4)");
        }
    });
    //Ingresar Información//

    //Editar Información//
    $("#EditarInformacion").click(function () {
        if ($("#PaisEditar").val() != "") {
            $("#PaisEditar").css("background-color", "rgba(255, 0, 0, 0)");
            if ($("#ContinenteEditar").val() != 0) {
                $("#ContinenteEditar").css("background-color", "rgba(255, 0, 0, 0)");
                    $.ajax({
                        type: "POST",
                        url: '@Url.Action("EditarPais", "Paises")',
                        data: { NombrePais: $("#PaisEditar").val(), Estado: $("#EstadoEditar").val(), IdContinente: $("#ContinenteEditar").val(), IdPais: $("#idpais").val() },
                        success: function (response) {
                            var json = JSON.parse(response);
                            if (json.validador == 0) {
                                var aux = 'success';
                            } else {
                                var aux = 'warning';
                            }
                            swal({
                                title: '',
                                text: json.Mensaje,
                                type: aux,
                                showCancelButton: false,
                                confirmButtonColor: '#3085d6',
                                cancelButtonColor: '#d33',
                                confirmButtonText: 'Aceptar'
                            }).then((result) => {
                                location.reload();
                            })
                        }
                    });
            } else {
                $("#ContinenteEditar").css("background-color", "rgba(255, 0, 0, 0.4)");
            }
        } else {
            $("#PaisEditar").css("background-color", "rgba(255, 0, 0, 0.4)");
        }
    });
    //Editar Información//

</script>