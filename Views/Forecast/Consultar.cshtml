@{
    if (Session["lang"].ToString() == "es_ES")
    {
        ViewBag.Title = "AplicacionTecnica";
        Layout = "~/Views/MasterPage.cshtml";
    }
    else
    {
        ViewBag.Title = "TechnicalApplication";
        Layout = "~/Views/MasterPageIngles.cshtml";
    }

}
<div class="row">
    <h1>Consultar Forecast</h1>
</div>
<div class="separator"></div>
<div class="row">
    <div class="col-lg-5 col-md-5 col-xs-12">
        <input type="text" class="form-control" id="Nombre" style="text-align:center; text-align-last:center;" placeholder="Ingrese Nombre Forecast">
    </div>
    <div class="col-lg-5 col-md-5 col-xs-12">
        <select class="form-control" id="Ano" style="text-align:center; text-align-last:center;">
            <option>Seleccione Año</option>
            <option>2017</option>
            <option>2018</option>
            <option>2019</option>
            <option>2020</option>
        </select>
    </div>
    <div class="col-lg-2 col-md-2 col-xs-12">
        <button type="button" id="Filtar" class="form-control btn btn-warning">Filtrar</button>
    </div>
</div>
<div class="separator"></div>
<div class="row">
    <table id="Forecast" class="display table-bordered" style="display:none;">
        <thead>
            <tr>
                <th>ID FORECAST</th>
                <th>NOMBRE</th>
                <th>AÑO</th>
                <th colspan="1">VER DETALLE</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>1</td>
                <td>Forecast año 2017</td>
                <td>2017</td>
                <td style="font-size:18px; text-align:center"><i class="fa fa-search" title="Ver detalle" id="Informacion"></i></td>
            </tr>
        </tbody>
    </table>
</div>

<script>
    $(".btn-warning").click(function () {
        $("#Forecast").show();
    });
</script>