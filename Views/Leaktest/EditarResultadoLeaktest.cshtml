
@{
    ViewBag.Title = "EditarResultadoLeaktest";
    Layout = "~/Views/MasterPage.cshtml";
}

<div class="row">
    <div class="x_panel">
        <div class="x_title">
            <h2>Editar Resultado LeakTest <small></small></h2>
            <div class="clearfix"></div>
        </div>
