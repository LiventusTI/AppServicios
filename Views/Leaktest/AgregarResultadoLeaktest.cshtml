</div>
<script type="text/javascript">

            $(".fa-times").click(function () {
                swal(
                    'Error...',
                    'Mostrar Error o Aceptación Según Corresponda',
                    'error'
                )
            });

            //Botón Editar Reserva//
            $("#Agregar").click(function () {
                var valores = [];
                var i = 0;
                // Obtenemos todos los valores contenidos en los <td> de la fila
                // seleccionada
                $(this).parents("tr").find("td").each(function () {
                    valores[i++] = $(this).html();
                });
                var url = '@Url.Action("IngresarResultadoLeaktest", "Leaktest")?id=' + valores[0] + '&deposito=' + valores[1] + '&naviera=' + valores[2] + '&cantidad=' + valores[3] + '&pendientes=' + valores[5] + '&fechaSolicitud=' + valores[6] + '&fechaRealizacion=' + valores[7];
                window.location.href = url;
            });
            //Botón Editar Reserva//



            //Botón Detalle Reserva//
            $("#Informacion").click(function () {
                var valores = [];
                var i = 0;
                // Obtenemos todos los valores contenidos en los <td> de la fila
                // seleccionada
                $(this).parents("tr").find("td").each(function () {
                    valores[i++] = $(this).html();
                });
                var url = '@Url.Action("DetalleReserva", "Reservas")?id=' + valores[0] + '&booking=' + valores[1];
                window.location.href = url;
            });
            //Botón Detalle Reserva//

</script>



