
@{
    ViewBag.Title = "RendimientoServicio";
    Layout = "~/Views/MasterPage.cshtml";
}

<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_content">
                <br />

                <div id="chartContainer" style="height: 370px; width: 100%;"></div>
                <br />
                <br />
            </div>
        </div>
    </div>
</div>
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <div class="x_panel">
                            <div class="x_content">
                                <div class="form-group">
                                    <div class="col-md-12 col-sm-12 col-xs-12">
                                        <label id="lb_leaktest" align="center" class="control-label col-md-12 col-sm-12 col-xs-12">
                                            Servicio Anomalo
                                        </label>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-3 col-sm-3 col-xs-6 col-md-offset-4">
                                        <label id="lb_leaktest" class="control-label col-md-3 col-sm-3 col-xs-6">
                                            Si 
                                        </label>
                                        <div class="col-md-6 col-sm-6 col-xs-6">
                                            <input id="leaktest" type="checkbox" value="@ViewBag.Leaktest" class="checkbox-inline">
                                        </div>
                                    </div>
                                    <div class="col-md-3 col-sm-3 col-xs-6">
                                        <label id="lb_cortina" class="control-label col-md3 col-sm-3 col-xs-6">
                                            No 
                                        </label>
                                        <div class="col-md-6 col-sm-6 col-xs-6">
                                            <input id="cortina" type="checkbox" value="@ViewBag.Cortina" checked="checked" class="checkbox-inline">
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-12 col-sm-12 col-xs-12" style="text-align:center">
                                        <button type="button" class="btn btn-success" onclick="">Aceptar</button>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <script type="text/javascript">
                    window.onload = function () {

                        var chart = new CanvasJS.Chart("chartContainer", {
                            animationEnabled: true,
                            theme: "light2",
                            title: {
                                text: "Rendimiento del Servicio"
                            },
                            axisX: {
                                valueFormatString: "DD MMM",
                                crosshair: {
                                    enabled: true,
                                    snapToDataPoint: true
                                }
                            },
                            axisY: {
                                title: "Porcentajes de Gasificación",
                                crosshair: {
                                    enabled: true
                                }
                            },
                            toolTip: {
                                shared: true
                            },
                            legend: {
                                cursor: "pointer",
                                verticalAlign: "bottom",
                                horizontalAlign: "left",
                                dockInsidePlotArea: true,
                                itemclick: toogleDataSeries
                            },
                            data: [{
                                type: "line",
                                showInLegend: true,
                                name: "O2",
                                markerType: "square",
                                xValueFormatString: "DD MMM, YYYY",
                                color: "#F08080",
                                dataPoints: [
                                    { x: new Date(2017, 1, 01), y: 12 },
                                    { x: new Date(2017, 1, 02), y: 12 },
                                    { x: new Date(2017, 1, 03), y: 12 },
                                    { x: new Date(2017, 1, 04), y: 12 },
                                    { x: new Date(2017, 1, 05), y: 12 },
                                    { x: new Date(2017, 1, 06), y: 12 },
                                    { x: new Date(2017, 1, 07), y: 12 },
                                    { x: new Date(2017, 1, 08), y: 12 },
                                    { x: new Date(2017, 1, 09), y: 12 },
                                    { x: new Date(2017, 1, 10), y: 12 },
                                    { x: new Date(2017, 1, 11), y: 11 },
                                    { x: new Date(2017, 1, 12), y: 11 },
                                    { x: new Date(2017, 1, 13), y: 11 },
                                    { x: new Date(2017, 1, 14), y: 10 }
                                ]
                            },
                            {
                                type: "line",
                                showInLegend: true,
                                name: "CO2",
                                lineDashType: "dash",
                                dataPoints: [
                                    { x: new Date(2017, 1, 01), y: 8 },
                                    { x: new Date(2017, 1, 02), y: 8 },
                                    { x: new Date(2017, 1, 03), y: 8 },
                                    { x: new Date(2017, 1, 04), y: 8 },
                                    { x: new Date(2017, 1, 05), y: 8 },
                                    { x: new Date(2017, 1, 06), y: 8 },
                                    { x: new Date(2017, 1, 07), y: 9 },
                                    { x: new Date(2017, 1, 08), y: 9 },
                                    { x: new Date(2017, 1, 09), y: 9 },
                                    { x: new Date(2017, 1, 10), y: 10 },
                                    { x: new Date(2017, 1, 11), y: 10 },
                                    { x: new Date(2017, 1, 12), y: 10 },
                                    { x: new Date(2017, 1, 13), y: 10 },
                                    { x: new Date(2017, 1, 14), y: 10 }
                                ]
                            }]
                        });
                        chart.render();

                        function toogleDataSeries(e) {
                            if (typeof (e.dataSeries.visible) === "undefined" || e.dataSeries.visible) {
                                e.dataSeries.visible = false;
                            } else {
                                e.dataSeries.visible = true;
                            }
                            chart.render();
                        }

                    }
                </script>
